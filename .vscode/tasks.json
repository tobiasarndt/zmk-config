{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cd app && west build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "cd app && west flash",
      "group": "test"
    },
    {
      "label": "Debug",
      "type": "shell",
      "command": "cd app && west debug",
      "group": "test"
    }
  ]
}
